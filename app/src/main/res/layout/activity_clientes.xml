<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inacap.pixel.prueba2.Cliente.Clientes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agregar Cliente"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:onClick="agregarCliente"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ver Clientes"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="viewClientes"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Eliminar Cliente"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="deleteCliente"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="volverOpciones"
        />

</LinearLayout>
