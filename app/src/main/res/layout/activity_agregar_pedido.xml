<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inacap.pixel.prueba2.Pedido.AgregarPedido">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Pedido"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_dark"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Rut Cliente"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:id="@+id/rut"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Fecha de entrega (DD-MM-AAAA)"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:id="@+id/n_local"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Productos"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:id="@+id/n_contacto"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Total"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:id="@+id/direccion"
        />
    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:id="@+id/spinnerP"
        ></Spinner>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Guardar"
        android:id="@+id/guardar"
        android:onClick="addPedido"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Cancelar"
        android:id="@+id/cancelar"
        android:onClick="cancelar"
        />

</LinearLayout>
